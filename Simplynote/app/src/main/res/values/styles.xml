<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="textColor">#000000</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#DFDDDD</item>
        <item name="cardBackground">#DDE8F1</item>
        <item name="windowNoTitle">true</item>
        <item name="itemShapeFillColor">#848484</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="textColorHint">#979494</item>


    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0000FF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#303030</item>
        <item name="textColor">#ffffff</item>
        <item name="tintColor">#ffffff</item>
        <item name="buttonColor">#2996f3</item>
        <item name="cardBackground">#0000ff</item>
        <item name="windowNoTitle">true</item>
        <item name="itemShapeFillColor">#ffffff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="textColorHint">#979494</item>


    </style>


</resources>